<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="show-item-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Judul</th>
              <th>Harga</th>
              <th>Negara</th>
              <th>Kota</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < items.length; i++) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= items[i].title %></td>
              <td><%= items[i].price %></td>
              <td><%= items[i].country %></td>
              <td><%= items[i].city %></td>
              <td>
                <form action="/admin/items/<%= items[i].id %>?_method=DELETE" method="POST">
                  <a href="#" type="button" class="btn btn-info btn-sm button-update"
                    data-id="<%= items[i].id %>" data-name="<%= items[i].name %>"><i class="fas fa-image"></i></a>
                  <a href="javascript:void()" type="button" class="btn btn-warning btn-sm button-update"
                    data-id="<%= items[i].id %>" data-name="<%= items[i].name %>"><i class="fas fa-edit"></i></a>
                  <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                  <a href="#" type="button" class="btn btn-success btn-sm button-update"
                  data-id="<%= items[i].id %>" data-name="<%= items[i].name %>"><i class="fas fa-plus"></i></a>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>