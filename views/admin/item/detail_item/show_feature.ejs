<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="show-feature-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/item/create/feature" method="POST" enctype="multipart/form-data">
            
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
              </div>
              <div class="form-group">
                <label for="number">Qty</label>
                <input type="text" class="form-control" id="features-account" name="qty" placeholder="Qty" required>
              </div>
              <div class="form-group">
                <label for="name">Image URL</label>
                <input type="file" class="form-control" id="image-url" name="image" required>
              </div>
              <input type="hidden" name="itemId" value='<%=itemId%>'>
              <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Nama</th>
                  <th>QTY</th>
                  <th>Image URL</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < features.length; i++) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= features[i].name %></td>
                  <td><%= features[i].qty %></td>
                  <td>
                    <img src="http://localhost:3000/public/<%= features[i].imageUrl %>" alt="imageUrl" height='70px' width='70px'>
                  </td>
                  <td>
                    <form action="/admin/features/<%= features[i].id %>?_method=DELETE" method="POST">
                      <a href="javascript:void()" type="button" class="btn btn-warning btn-sm button-update"
                        data-id="<%= features[i].id %>" data-itemid="<%= features[i].itemId %>" data-name="<%= features[i].name %>" data-qty="<%= features[i].qty %>"><i class="fas fa-edit"></i></a>
                      <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>