<div class="tab-pane fade" id="show-activity" role="tabpanel" aria-labelledby="show-activity-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/item/create/activity" method="POST" enctype="multipart/form-data">
            
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
              </div>
              <div class="form-group">
                <label for="name">Type</label>
                <input type="text" class="form-control" id="bank-account" name="type" placeholder="Type" required>
              </div>
              <div class="form-group">
                <label for="name">Image URL</label>
                <input type="file" class="form-control" id="image-url" name="image" required>
              </div>
              <input type="hidden" value="<%=itemId%>" name="itemId">
              <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Nama</th>
                  <th>Type</th>
                  <th>Image URL</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < activities.length; i++) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= activities[i].name %></td>
                  <td><%= activities[i].type %></td>
                  <td>
                    <img src="http://localhost:3000/public/<%= activities[i].imageUrl %>" alt="imageUrl" height='70px' width='70px'>
                  </td>
                  <td>
                    <form action="/admin/item/<%= itemId %>/activity/<%= activities[i].id %>?_method=DELETE" method="POST">
                      <a href="javascript:void()" type="button" class="btn btn-warning btn-sm button-update"
                        data-id="<%= activities[i].id %>" data-itemid="<%= activities[i].itemId %>" data-name="<%= activities[i].name %>" data-type="<%= activities[i].type %>"><i class="fas fa-edit"></i></a>
                      <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>